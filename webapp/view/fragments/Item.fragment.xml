<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ColumnListItem press="onItemPressed">
		<Text text="{Checklistname}" />
		<Text text="{Itemname}" />
<!-- 		<Text text="{Severity}" /> -->
		<core:Icon src="{= ${SevIcon}.toLowerCase()}" color="{SevColor}"/>
		<Text text="{Status}" />
		<Text text="{RespUser}" />
		<Text text="{Itemresult}" />
<!-- 		<Text text="{Priority}" /> -->
		<Text
			text="{path: 'Duedate', type:'sap.ui.model.type.Date', formatOptions : { pattern:'dd.MM.yyyy'}}" />
	</ColumnListItem>
</core:FragmentDefinition>